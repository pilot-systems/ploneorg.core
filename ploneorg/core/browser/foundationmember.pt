<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

  <metal:block fill-slot="top_slot"
                   tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',0);
                               disable_column_two python:request.set('disable_plone.rightcolumn',1);" />

  <metal:content-core fill-slot="main">
    <h1 class="documentFirstHeading"
        tal:content="context/get_full_name">First name</h1>

    <div class="email" tal:condition="python:context.email and (context.showEmail or view.canViewDetails())">
      <i class="fa fa-envelope"></i>
      <a href="mailto:${context/email}">${context/email}</a>
    </div>

    <div class="website" tal:define="url context/website" tal:condition="url">
      <i class="fa fa-globe"></i>
      <a href="${url}">${url}</a>
    </div>

    <div title="Twitter" class="twitter" tal:condition="context/twitter_url">
      <i class="fa fa-twitter"></i>
      <a href="${context/twitter_url}">@${context/twitter}</a>
    </div>

    <div title="Facebook" class="facebook" tal:condition="context/facebook_url">
      <i class="fa fa-facebook"></i>
      <a href="${context/facebook_url}">${context/facebook}</a>
    </div>

    <div title="LinkedIn" class="linkedin" tal:condition="context/linkedin_url">
      <i class="fa fa-linkedin"></i>
      <a href="${context/linkedin_url}">${context/linkedin}</a>
    </div>

    <div title="Github" class="github" tal:condition="context/github_url">
      <i class="fa fa-github"></i>
      <a href="${context/github_url}">${context/github}</a>
    </div>

    <div tal:condition="context/organization">
      <h3>Organization</h3>
      <div tal:content="context/organization">
        Organization
      </div>

      <div tal:condition="context/city">
        <span tal:content="context/city">City</span>
        <tal:country condition="python: context.country or contact.state">
          (<span tal:content="context/country_name">Country</span>, <span tal:content="context/state">State</span>)
        </tal:country>
      </div>
    </div>

    <div tal:define="merit context/merit/output | nothing"
         tal:condition="python:merit and view.canViewDetails()">
      <h3>Contributions to the project</h3>
      <div tal:content="structure merit">
        Merit
      </div>
    </div>

    <div tal:define="ploneuse context/ploneuse/output | nothing"
         tal:condition="ploneuse">
      <h3>Plone use</h3>
      <div tal:content="structure ploneuse">
        Plone use
      </div>
    </div>

  </metal:content-core>

</body>
</html>
